





<section class="vh-100">
  <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp" class="img-fluid"
          alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          

          <div class="divider d-flex align-items-center my-4">
            <h3 class="text-center fw-bold mx-3 mb-0">Inicio de Sesion</h3>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.label "Correo",class:"form-label", for:"form3Example3" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",type:"email", 
                              id:"form3Example3", class:"form-control form-control-lg",
                              placeholder:"Introduzca una dirección de correo electrónico válida" %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">

            <%= f.label "Contraseña",class:"form-label", for:"form3Example4" %>
            <%= f.password_field :password, autocomplete: "current-password",type:"password", 
                                  id:"form3Example4", class:"form-control form-control-lg",
                                  placeholder:"Introducir la contraseña" %>
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Checkbox -->
            <div class="form-check mb-0">

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class:"form-check-input me-2", type:"checkbox",
                                  value:"", id:"form2Example3" %>
                  <%= f.label "Recuérdame", class:"form-check-label", for:"form2Example3" %>
                </div>
              <% end %>
            </div>
            <p>soportepqr@mystudy.com</p>
          </div>

          <div class="text-center text-lg-start mt-4 pt-2">

            <%= f.submit "iniciar sesión", class:"btn btn-primary btn-lg",
              style:"padding-left: 2.5rem; padding-right: 2.5rem;" %>
            <p class="small fw-bold mt-2 pt-1 mb-0"> ¿No tienes una cuenta? <a>
            <%= render "devise/shared/links" %></a></p>
          </div>

        <% end %>
      </div>
    </div>
  </div>
  <br>
  <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary">
    <!-- Copyright -->
    <div class="text-white mb-3 mb-md-0">
      Copyright © 2022. All rights reserved. by JuanRc
    </div>
    <!-- Copyright -->

    <!-- Right -->
    <div>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-facebook-f"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-twitter"></i>
      </a>
      <a href="#!" class="text-white me-4">
        <i class="fab fa-google"></i>
      </a>
      <a href="#!" class="text-white">
        <i class="fab fa-linkedin-in"></i>
      </a>
    </div>
    <!-- Right -->
  </div>
</section>
